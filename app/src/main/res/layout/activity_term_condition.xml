<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.TermConditionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/appbar_no_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lv_khmer"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_radius_grey_no_bg"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="15sp"
                        android:textColor="@color/black_overlay"
                        android:paddingBottom="4dp"
                        android:text="Khmer"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv_english"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_radius_yellow_no_bg"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:onClick="navigateHome">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="15sp"
                        android:textColor="@color/colorYello"
                        android:paddingBottom="4dp"
                        android:text="English"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />
            <WebView
                android:id="@+id/webViewTermCondition"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>